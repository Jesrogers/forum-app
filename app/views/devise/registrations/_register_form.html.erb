<%= form_with model: user, url: user_registration_path, class: 'form' do |form| %>
    <div class="form__title">
      <h1><%= form_title %></h1>
    </div>

    <div class="message message--info">
      If you would like to use a <strong>premade account</strong>, the login credentials are:
      <br>
      <br>
      <strong>Username</strong> - visitor@example.com
      <br>
      <strong>Password</strong> - testing
    </div>

    <div class="form__field">
      <%= form.label :email, class: "form__label" %>
      <%= form.email_field :email, class: "form__input", autofocus: true, required: true, autocomplete: "email" %>
      <% user.errors.full_messages_for(:email).each do |email_error| %>
        <span class="form__error"><%= email_error %></span>
      <% end %>
    </div>

    <div class="form__field">
      <%= form.label :username, class: "form__label" %>
      <%= form.text_field :username, class: "form__input", required: true, autocomplete: "email" %>
      <% user.errors.full_messages_for(:username).each do |username_error| %>
        <span class="form__error"><%= username_error %></span>
      <% end %>
    </div>

    <div class="form__field">
      <%= form.label :password, class: "form__label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= form.password_field :password, class: "form__input", required: true, autocomplete: "new-password" %>
      <% user.errors.full_messages_for(:password).each do |password_error| %>
        <span class="form__error"><%= password_error %></span>
      <% end %>
    </div>

    <div class="form__field">
      <%= form.label :password_confirmation, class: "form__label" %>
      <%= form.password_field :password_confirmation, class: "form__input", required: true, autocomplete: "new-password" %>
      <% user.errors.full_messages_for(:password_confirmation).each do |password_confirm_error| %>
        <span class="form__error"><%= password_confirm_error %></span>
      <% end %>
    </div>

    <div class="form__actions">
      <%= form.button "Submit", class: "form__submit" %>
    </div>
  <% end %>