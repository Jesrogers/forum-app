<%= form_with model: channel, class: "form" do |form| %>
    <div class="form__title">
        <h1><%= form_title %></h1>
    </div>
    <div class="form__field">
        <%= form.label :name, class: "form__label" %>
        <%= form.text_field :name, class: "form__input" %>
    </div>
    <div class="form__field">
        <%= form.label :position, class: "Form__label" %>
        <%= form.number_field :position, class: "form__input" %>
    </div>
    <%= form.submit "Create", class: "form__submit" %>
<% end %>