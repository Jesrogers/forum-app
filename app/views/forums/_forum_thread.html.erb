<%= link_to forum_thread_path(forum_thread), class: "forum-thread" do %>


    <div class="forum-thread__title">
        <% if forum_thread.locked %>
            <span class="fa fa-lock forum-thread__icon"></span>
        <% end %>

        <% if forum_thread.pinned %>
            <span class="fa fa-thumbtack forum-thread__icon"></span>
        <% end %>
        <%= forum_thread.title %>
    </div>
    <div class="forum-thread__author"><%= forum_thread.author.username %></div>
    <div class="forum-thread__replies"><%= forum_thread.forum_replies.count %></div>
    <div class="forum-thread__activity"><%= time_ago_in_words(forum_thread.updated_at) %></div>
<% end %>