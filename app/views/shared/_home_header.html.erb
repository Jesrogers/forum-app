<header class="site-header">
    <div class="site-header__top">
        <%= link_to root_path do %>
            <%= image_tag 'https://uilogos.co/img/logomark/leaf.png', class: "site-header__logo" %>
        <% end %>
        <nav class="nav">
            <ul class="nav__list">
                <li class="nav__item"><%= link_to 'Forums', channels_path, class: "nav__link" %></li>
                <li class="nav__item"><%= link_to 'Latest', '#', class: "nav__link" %></li>
            </ul>
        </nav>
        <nav class="nav">
            <ul class="nav__list">
                <li class="nav__item"><%= link_to 'Register', new_user_registration_path, class: "nav__link" %></li>
                <li class="nav__item"><%= link_to 'Login', new_user_session_path, class: "nav__link" %></li>
                <li class="nav__item"><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "nav__link" %></li>
            </ul>
        </nav>   
    </div>
    <div class="hero">
        <div class="hero__text">
            <h1>Fakesite Community</h1>
            <h3>Connect with those around you</h3>
        </div>
    </div>
</header>